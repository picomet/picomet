{
  "root": true,
  "overrides": [
    {
      "files": [
        "src/picomet/assets/**/*.js",
        "example/apps/**/assets/**/*.js",
        "example/apps/**/comets/**/*.js"
      ],
      "extends": ["eslint:recommended", "plugin:jsdoc/recommended"],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "env": {
        "browser": true,
        "es6": true
      },
      "globals": {
        "Alpine": true
      }
    },
    {
      "files": ["*.postcss.js", "*.tailwind.js", "src/picomet/tailwind.js"],
      "extends": ["eslint:recommended", "plugin:jsdoc/recommended"],
      "parserOptions": {
        "ecmaVersion": 2017
      },
      "env": {
        "node": true,
        "commonjs": true
      }
    }
  ],
  "ignorePatterns": ["env", "dist", "build", "htmlcov", "**/*.d.ts"]
}
