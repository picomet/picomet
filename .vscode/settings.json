{
  "eslint.validate": ["javascript", "typescript"],
  "eslint.experimental.useFlatConfig": true,
  "javascript.validate.enable": false,
  "python.analysis.extraPaths": ["./example/apps/"],
  "python.analysis.autoImportCompletions": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "tailwindCSS.experimental.configFile": "example/comets/base.tailwind.js",
  "prettier.configPath": "./.prettierrc.json",
  "[html][css][scss][javascript][typescript][json][jsonc][markdown][yaml][toml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "esbonio.sphinx.confDir": "${workspaceFolder}/docs/source",
  "esbonio.sphinx.buildDir": "${workspaceFolder}/docs/esbonio"
}
